# Netlify headers for SEO and performance optimization

/*
  # Security headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com https://static.hotjar.com https://www.clarity.ms; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://www.google-analytics.com https://api.whatsapp.com https://wa.me; frame-src 'self' https://www.google.com;
  
  # Performance headers
  Cache-Control: public, max-age=31536000, immutable
  
  # SEO headers
  X-Robots-Tag: index, follow
  
  # CORS headers for fonts and assets
  Access-Control-Allow-Origin: *
  
/sitemap.xml
  Content-Type: application/xml
  Cache-Control: public, max-age=86400
  
/robots.txt
  Content-Type: text/plain
  Cache-Control: public, max-age=86400
  
/*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css
  
/*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript
  
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff2
  
/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/jpeg
  
/*.png
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/png
  
/*.webp
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/webp
  
/*.svg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/svg+xml